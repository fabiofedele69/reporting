CREATE OR REPLACE VIEW LC_SCMT.VW_FCSGMT_GFUI_NEW_FF_SAFE AS
SELECT
    -- Identifiers and structural info
    CASE_ID,
    SOURCE,
    CAST(INVESTIGATING_REGION_TEAM AS VARCHAR2(4000 CHAR)) AS INVESTIGATING_REGION_TEAM,
    CASE_BU,
    CASE_DIVISION,
    CAST(CASE_REGIONS AS VARCHAR2(4000 CHAR)) AS CASE_REGIONS,
    CAST(CASE_COUNTRIES AS VARCHAR2(4000 CHAR)) AS CASE_COUNTRIES,
    LINE_OF_BUSINESS,
    CAST(LEGAL_ENTITIES AS VARCHAR2(4000 CHAR)) AS LEGAL_ENTITIES,
    BUSINESS_AREA,

    -- Case details
    CAST(CASE_NAME AS VARCHAR2(4000 CHAR)) AS CASE_NAME,
    CASE_STATE,
    CASE_STEP,
    DATE_CASE_CREATED,
    DATE_CASE_COMPLETED,
    DATE_CASE_CLOSED,
    DATE_REPORTED,

    -- Referral and triggers
    CAST(REFERRAL AS VARCHAR2(4000 CHAR)) AS REFERRAL,
    REFERRAL_CONTACT,
    CAST(REFERRAL_CONTACT_OU_NM AS VARCHAR2(4000 CHAR)) AS REFERRAL_CONTACT_OU_NM,
    CAST(CASE_TRIGGER AS VARCHAR2(4000 CHAR)) AS CASE_TRIGGER,
    CAST(SUMMARY_TRIGGER AS VARCHAR2(4000 CHAR)) AS SUMMARY_TRIGGER,
    CAST(CASE_TAGS AS VARCHAR2(4000 CHAR)) AS CASE_TAGS,
    XML_GENERATION_DATE,

    -- Elements
    CAST(ELEMENT_TYPE AS VARCHAR2(4000 CHAR)) AS ELEMENT_TYPE,
    FCSCMI_ELEMENT_ID,
    CAST(ELEMENT_ID AS VARCHAR2(4000 CHAR)) AS ELEMENT_ID,
    CAST(SAR_FILED AS VARCHAR2(4000 CHAR)) AS SAR_FILED,
    SAR_FILING_DATE,
    CAST(ELEMENT_DECISION AS VARCHAR2(4000 CHAR)) AS ELEMENT_DECISION,

    -- Partner / account
    CAST(PARTNER_TYPE AS VARCHAR2(4000 CHAR)) AS PARTNER_TYPE,
    PARTY_ROLE,
    CAST(PARTNER_NAME AS VARCHAR2(4000 CHAR)) AS PARTNER_NAME,
    CAST(PARTNER_INDUSTRIES AS VARCHAR2(4000 CHAR)) AS PARTNER_INDUSTRIES,
    CAST(PARTNER_DOMICILE_COUNTRIES AS VARCHAR2(4000 CHAR)) AS PARTNER_DOMICILE_COUNTRIES,
    CAST(PARTNER_NATIONALITY_COUNTRIES AS VARCHAR2(4000 CHAR)) AS PARTNER_NATIONALITY_COUNTRIES,
    CAST(ACCOUNT_NAME AS VARCHAR2(4000 CHAR)) AS ACCOUNT_NAME,
    CAST(ACCOUNT_STATUS AS VARCHAR2(4000 CHAR)) AS ACCOUNT_STATUS,
    CAST(BR_NAME AS VARCHAR2(4000 CHAR)) AS BR_NAME,
    BR_STATUS_POINT_IN_TIME,
    CURRENT_BR_STATUS,
    BR_BALANCE_POINT_IN_TIME,
    CURRENT_BR_BALANCE,
    BR_CURRENCY,
    RELATIONSHIP_STRATEGY,

    -- Ownership / metadata
    CASE_CREATED_BY,
    CASE_OWNER,
    CASE_OWNER_GPN,
    CAST(PREDICATE_OFFENSE AS VARCHAR2(4000 CHAR)) AS PREDICATE_OFFENSE,
    COMPLIANCE_UNIT,
    CAST(CASE_RATING AS VARCHAR2(4000 CHAR)) AS CASE_RATING,
    ML_PHASE,
    PEP,
    SCAP,
    SIAP,
    NTBR,
    SIM,
    FIFTY_PLUS,
    FISCAL_RISK,

    -- Large text / LOB fields safely truncated
    CAST(DBMS_LOB.SUBSTR(SUMMARY_ANALYSIS, 3000, 1) AS VARCHAR2(4000 CHAR)) AS SUMMARY_ANALYSIS,
    CAST(DBMS_LOB.SUBSTR(SUMMARY_CONCLUSION, 3000, 1) AS VARCHAR2(4000 CHAR)) AS SUMMARY_CONCLUSION,
    CAST(CASE_DESCRIPTION AS VARCHAR2(4000 CHAR)) AS CASE_DESCRIPTION,

    -- Other metadata
    CONFIDENTIAL,
    DATE_LAST_UPDATE,
    CAST(OUTCOME_SUBTYPE AS VARCHAR2(4000 CHAR)) AS OUTCOME_SUBTYPE

FROM LC_SCMT.VW_FCSGMT_GFUI_NEW_FF;
